{
  "manifest_version": 2,
  "name": "Brick By Break",
  "version": "1.0",
  "icons": {
    "16": "../brickByBreakLogo.jpg",
    "32": "../brickByBreakLogo.jpg",
    "48": "../brickByBreakLogo.jpg",
    "128": "../brickByBreakLogo.jpg"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "https://*.instructure.com/*",
    "https://*.edu/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "scripts": ["../background.js"]
  },
  "browser_action": {
    "default_popup": "../popup.html",
    "default_icon": {
      "16": "../brickByBreakLogo.jpg",
      "32": "../brickByBreakLogo.jpg",
      "48": "../brickByBreakLogo.jpg",
      "128": "../brickByBreakLogo.jpg"
    }
  }
}
